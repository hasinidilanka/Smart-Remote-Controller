<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF60616A" />
            <gradient android:angle="-90" android:startColor="#FF60616A" android:endColor="#FF111112"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1E90FF" />
            <solid android:color="#1E90FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1E90FF" />
            <gradient android:angle="-90" android:startColor="#1E90FF" android:endColor="#87CEEB" />
        </shape>
    </item>

</selector>